<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net"/>
  </configSections>
  <system.serviceModel>
    <services>
      <service behaviorConfiguration="InforoomOnlineServiceBehavior" name="InforoomOnline.InforoomOnlineService">
        <endpoint binding="basicHttpBinding" bindingConfiguration="InforoomBinding" contract="InforoomOnline.IInforoomOnlineService"/>
      </service>
    </services>
    <bindings>
      <basicHttpBinding>
        <binding name="InforoomBinding" maxBufferSize="2097152" maxReceivedMessageSize="2097152">
          <security mode="TransportCredentialOnly">
            <transport clientCredentialType="Ntlm"/>
          </security>
        </binding>
      </basicHttpBinding>
    </bindings>
    <behaviors>
      <serviceBehaviors>
        <behavior name="InforoomOnlineServiceBehavior">
          <serviceMetadata httpGetEnabled="true"/>
          <serviceDebug includeExceptionDetailInFaults="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
  <connectionStrings>
    <add name="Main" connectionString="Data Source=testsql.analit.net;Database=usersettings;User ID=system;Password=newpass;Connect Timeout=300;pooling=true;convert zero datetime=yes;"/>
  </connectionStrings>
  <system.web>
    <compilation debug="true" />
  </system.web>
  <log4net>
    <appender name="MyEmail" type="log4net.Appender.SmtpAppender, log4net">
      <to value="r.kvasov@analit.net"/>
      <from value="service@analit.net"/>
      <subject value="Ошибка в сервисе InforoomOnline"/>
      <smtpHost value="mail.adc.analit.net"/>
      <lossy value="false"/>
      <bufferSize value="0"/>
      <layout type="log4net.Layout.PatternLayout, log4net">
        <conversionPattern value="Version: %property{Version}%newlineHost: %property{log4net:HostName} %newlineUserName: %username %newlineDate: %date %newline"/>
      </layout>
    </appender>
    <appender name="LogFile" type="log4net.Appender.RollingFileAppender, log4net">
      <file value="iol.log"/>
      <appendToFile value="true"/>
      <rollingStyle value="Size"/>
      <staticLogFileName value="true"/>
      <maximumFileSize value="100KB"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%d{dd.MM.yyyy HH:mm:ss.fff} [%t] %-5p %c - %m%n"/>
      </layout>
    </appender>
    <root>
      <level value="ERROR"/>
      <appender-ref ref="LogFile"/>
      <appender-ref ref="MyEmail"/>
    </root>
  </log4net>
</configuration>